<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loading_into_app"
    android:background="#ebebeb">

    <ImageView
        android:id="@+id/top1"
        android:layout_width="420dp"
        android:layout_height="135dp"
        android:background="@drawable/homepgtop"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/homepgpfp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_person_24"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, user123!"
        android:textColor="#a3a3a3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DD/MM/YY  00:00"
        android:textColor="#a3a3a3"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/modacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify profile"
        android:textStyle="bold"
        android:textColor="#979797"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="18dp" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postslist"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"/>
    <!--gap of 225-->

    <ImageView
        android:id="@+id/Listposts"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/mainpgmenu"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="340dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:background="@drawable/ic_baseline_menu_24"
        android:layout_marginTop="601dp"
        android:layout_marginLeft="345.5dp"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/homepgadd"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="340dp"/>
    <ImageView
        android:id="@+id/newpost"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_baseline_add_24"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="341dp"/>








</RelativeLayout>