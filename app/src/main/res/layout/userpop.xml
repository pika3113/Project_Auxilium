<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".userpop"
    android:background="@drawable/pop">>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change username"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="25dp"/>
    <EditText
        android:id="@+id/changeuser"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Put new username here"
        android:layout_centerHorizontal="true"
        android:textColor="#545454"
        android:textColorHint="#dcdcdc"
        android:layout_marginTop="75dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_arrow_right_alt_24"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="80dp"/>
    <ImageView
    android:id="@+id/userchange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_baseline_done_24"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="130dp"/>

</RelativeLayout>